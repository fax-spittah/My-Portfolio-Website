---
import { Icon } from "astro-icon/components";

interface Props {
  iconName: string;
  techName: string;
}

const { iconName, techName }: Props = Astro.props;
---

<button
  class="bg-[#EEF0F2] dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-semibold py-2 px-4 mr-1 mt-1 mb-1 rounded inline-flex align-center items-center"
>
  <Icon name=`technologies/${iconName}` class="w-5 h-5 lg:w-6 lg:h-6" />
  <span class="text-base pl-1">{techName}</span>
</button>
