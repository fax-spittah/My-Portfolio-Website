---
interface Props {
  institutionImg: string;
  institutionName: string;
  program: string;
  degree?: string;
  startDate: string;
  endDate: string;
  description: string;
}

const {
  institutionImg,
  institutionName,
  program,
  degree,
  startDate,
  endDate,
  description,
}: Props = Astro.props;
---

<div
  class="md:w-[90%] lg:w-[85%] mx-auto mt-6 border border-gray-200 p-6 bg-white rounded-xl shadow-md hover:shadow-lg transition-all duration-300 hover:-translate-y-1"
>
  <div class="flex items-start mb-4">
    <div
      class="w-16 h-16 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0 mr-6"
    >
      <img src={institutionImg} alt="Education Icon" class="w-10 h-10" />
    </div>
    <div>
      <h3 class="text-xl lg:text-2xl font-bold text-gray-900">
        {institutionName}
      </h3>
      <p class="text-sm font-semibold text-blue-600 mt-1">
        {program}
        {degree && <> Â· {degree}</>}
      </p>
      <p class="text-sm text-gray-500 mt-1">{startDate} - {endDate}</p>
    </div>
  </div>

  <p class="text-sm text-gray-700 mt-4 leading-relaxed">{description}</p>
</div>
