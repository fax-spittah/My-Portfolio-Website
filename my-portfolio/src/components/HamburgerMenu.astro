---
import { Icon } from "astro-icon/components";
---

<div>
  <ul
    class="flex flex-col space-y-6 pt-6 w-full h-screen z-50 bg-white dark:bg-black text-gray-900 dark:text-white"
  >
    <a
      href="/home"
      class="text-lg hover:text-blue-600 dark:hover:text-blue-400"
    >
      <li>Home</li></a
    >
    <a
      href="/about"
      class="text-lg hover:text-blue-600 dark:hover:text-blue-400"
    >
      <li>About</li></a
    >
    <a href="/cv" class="text-lg hover:text-blue-600 dark:hover:text-blue-400">
      <li>CV</li></a
    >
    <hr class="text-gray-300 dark:text-gray-600" />
    <li>
      <button
        class="bg-gradient-to-r from-blue-500 to-blue-600 dark:bg-gradient-to-r dark:from-gray-300 dark:to-gray-400 hover:from-blue-600 hover:to-blue-700 dark:hover:from-gray-400 dark:hover:to-gray-500 text-white font-bold py-2 px-4 rounded inline-flex items-center w-full"
      >
        <Icon name="sun" class="w-full h-6 dark:hidden" />
        <Icon name="moon" class="w-full h-6 hidden dark:inline font-bold" />
      </button>
    </li>
  </ul>
</div>
