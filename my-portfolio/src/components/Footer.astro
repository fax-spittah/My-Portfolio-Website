---
import data from "../data/general.json";

const email = data.contactInformation.email;
const linkedInURL = data.contactInformation.linkedInUrl;
const discord = data.contactInformation.discord;
---

<footer class="p-6 bg-gray-100">
  <div
    class="footer-sections flex flex-col md:flex-row w-full justify-between align-left mb-4"
  >
    <div class="footer-connect w-1/2">
      <h2 class="font-semibold text-lg md:text-2xl mb-2">Contact me</h2>
      <p><a href={linkedInURL}>LinkedIn</a></p>
      <p><a href=`mailto: ${email}`>Email</a></p>
      <p><a href={discord}>Discord</a></p>
    </div>

    <div class="footer-links w-1/2">
      <h2 class="font-semibold text-lg md:text-2xl mb-2">Navigation</h2>
      <nav class="footer-nav flex flex-col">
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/cv">CV</a>
      </nav>
    </div>
  </div>

  <hr />
