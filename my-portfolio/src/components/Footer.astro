---
import data from "../data/general.json";

const email = data.contactInformation.email;
const linkedInURL = data.contactInformation.linkedInUrl;
const discord = data.contactInformation.discord;
---

<footer
  class="bg-gray-100 dark:bg-black text-gray-900 dark:text-white border-t border-gray-200 dark:border-gray-700"
>
  <div
    class="footer-sections flex flex-col md:flex-row w-full justify-between align-left mb-8 px-6 md:px-12 pt-12"
  >
    <div class="footer-connect w-full md:w-1/2 mb-8 md:mb-0">
      <h2
        class="font-bold text-lg md:text-xl mb-4 text-blue-600 dark:text-blue-400"
      >
        Connect with me
      </h2>
      <p class="mb-2">
        <a
          href={linkedInURL}
          class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300 font-medium"
          >LinkedIn</a
        >
      </p>
      <p class="mb-2">
        <a
          href=`mailto: ${email}`
          class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300 font-medium"
          >Email</a
        >
      </p>
      <p>
        <a
          href={discord}
          class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300 font-medium"
          >Discord</a
        >
      </p>
    </div>

    <div class="footer-links w-full md:w-1/2">
      <h2
        class="font-bold text-lg md:text-xl mb-4 text-blue-600 dark:text-blue-400"
      >
        Navigation
      </h2>
      <nav class="footer-nav flex flex-col">
        <a
          href="/"
          class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300 mb-2 font-medium"
          >Home</a
        >
        <a
          href="/about"
          class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300 mb-2 font-medium"
          >About</a
        >
        <a
          href="/cv"
          class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300 font-medium"
          >CV</a
        >
      </nav>
    </div>
  </div>

  <div class="border-t border-gray-300 dark:border-gray-600"></div>
  <div class="md:flex md:justify-between items-center px-6 md:px-12 py-6">
    <p class="text-sm text-gray-600 dark:text-gray-400 mb-2 md:mb-0">
      &copy; {new Date().getFullYear()}
      Edison N. Kiseh. All rights reserved.
    </p>
    <a
      href="https://github.com/fax-spittah/My-Portfolio-Website"
      target="_blank"
      class="text-base text-blue-600">Website Source Code</a
    >
  </div>
</footer>
