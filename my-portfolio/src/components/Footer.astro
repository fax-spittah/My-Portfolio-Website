---
import data from "../data/general.json";

const email = data.contactInformation.email;
const linkedInURL = data.contactInformation.linkedInUrl;
const discord = data.contactInformation.discord;
---

<footer class="bg-gradient-to-r from-gray-900 to-gray-800 text-white">
  <div
    class="footer-sections flex flex-col md:flex-row w-full justify-between align-left mb-8 px-6 md:px-12 pt-12"
  >
    <div class="footer-connect w-full md:w-1/2 mb-8 md:mb-0">
      <h2 class="font-bold text-lg md:text-xl mb-4 text-blue-400">
        Connect with me
      </h2>
      <p class="mb-2">
        <a
          href={linkedInURL}
          class="hover:text-blue-400 transition-colors duration-300"
          >LinkedIn</a>
      </p>
      <p class="mb-2">
        <a
          href=`mailto: ${email}`
          class="hover:text-blue-400 transition-colors duration-300">Email</a>
      </p>
      <p>
        <a
          href={discord}
          class="hover:text-blue-400 transition-colors duration-300">Discord</a>
      </p>
    </div>

    <div class="footer-links w-full md:w-1/2">
      <h2 class="font-bold text-lg md:text-xl mb-4 text-blue-400">
        Navigation
      </h2>
      <nav class="footer-nav flex flex-col">
        <a
          href="/"
          class="hover:text-blue-400 transition-colors duration-300 mb-2"
          >Home</a
        >
        <a
          href="/about"
          class="hover:text-blue-400 transition-colors duration-300 mb-2"
          >About</a
        >
        <a href="/cv" class="hover:text-blue-400 transition-colors duration-300"
          >CV</a
        >
      </nav>
    </div>
  </div>

  <div class="border-t border-gray-700"></div>
  <p class="footer-text mt-6 text-sm text-gray-400 px-6 md:px-12 pb-6">
    Â© {new Date().getFullYear()} Edison N. Kiseh. All rights reserved.
  </p>
</footer>
