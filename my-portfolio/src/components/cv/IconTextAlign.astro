---
import { Icon } from "astro-icon/components";

interface Props {
  iconName: string;
  text: string;
  section?: string;
  link?: string;
}

const { iconName, text, section, link }: Props = Astro.props;
---

<p class="flex items-center">
  {
    section === "title" ? (
      <>
        <>
          <Icon name={iconName} class="w-5 h-5 md:w-6 md:h-6 mb-[0.2rem]" />
          <span class="ml-[0.8rem] md:text-lg sm:text-base font-bold mb-[0.3rem] text-gray-900 dark:text-white">
            {text}
          </span>
        </>
      </>
    ) : section === "contact" ? (
      <>
        <>
          <Icon name={iconName} class="text-[#262626] dark:text-gray-300" />
          <span class="ml-[0.8rem] text-sm mt-[0.2rem] text-gray-800 dark:text-gray-200">
            <a href={link} target="_blank">
              {text}
            </a>
          </span>
        </>
      </>
    ) : (
      <>
        <>
          <Icon name={iconName} class="text-gray-500 dark:text-gray-400" />
          <span class="ml-[0.3rem] text-sm text-gray-700 dark:text-gray-300">
            {text}
          </span>
        </>
      </>
    )
  }
</p>
