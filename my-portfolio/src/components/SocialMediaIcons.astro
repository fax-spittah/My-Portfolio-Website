---
import { Icon } from "astro-icon/components";

interface Props {
  iconName: string;
  linkUrl?: string;
  title?: string;
}

const { iconName, linkUrl, title }: Props = Astro.props;
---

<a href={linkUrl} target="_blank" title={title}
  ><Icon
    name={iconName}
    class="w-6 h-6 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
  /></a
>
