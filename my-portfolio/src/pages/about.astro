            iconName="dotnet"
            techName=".NET & .NET Core"
          />
          <TechnologyIconAndName iconName="php" techName="PHP" />
          <TechnologyIconAndName iconName="nodejs" techName="Node.js" />
          <TechnologyIconAndName iconName="mysql" techName="MySQL" />
        </ul>
      </div>

      <div class="devops">
        <h3 class="text-lg font-semibold">DevOps</h3>
        <ul>
          <TechnologyIconAndName iconName="git" techName="Git" />
          <TechnologyIconAndName iconName="github" techName="GitHub" />
