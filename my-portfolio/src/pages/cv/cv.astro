---
import CVLeftSide from "../../components/CVLeftSide.astro";
import CVMain from "../../components/CVMain.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <title>Curriculum Vitae</title>
  <button
    class="btn btn-primary btn-sm absolute top-4 right-4 z-50"
    onclick="window.print()">Print CV</button
  >
  <div
    class="div flex flex-row justify-between w-full max-w-4xl mx-auto my-10 border-1 border-black-100 mb-[1rem] shadow-xl"
  >
    <CVLeftSide />
    <CVMain />
  </div>
</Layout>
