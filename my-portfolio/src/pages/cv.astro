---
import CVHeader from "../components/cv/CVHeader.astro";
import CVLeftSide from "../components/cv/CVLeftSide.astro";
import CVMain from "../components/cv/CVMain.astro";
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <title>Curriculum Vitae</title>
  <Header />

  <div class="mt-20 print-hide">
    <!-- To manually create space -->
  </div>

  <div
    class="flex justify-end w-full mb-2 print-hide mt-3 pr-2 md:pr-3 bg-white dark:bg-black"
  >
    <Icon
      name="printer"
      onclick="window.print()"
      class="w-5 h-5 md:w-7 md:h-7 cursor-pointer text-gray-700 dark:text-gray-200 hover:text-gray-900 dark:hover:text-gray-300 transition"
      style="display: block;"
    />
  </div>
  <div
    class="cv-container w-full max-w-4xl mx-auto mb-4 shadow-xl bg-white dark:bg-gray-900"
  >
    <CVHeader />
    <div class="cv-body md:flex md:flex-row md:justify-between">
      <CVLeftSide />
      <CVMain />
    </div>
  </div>
  <div class="dummy-div md:h-[3rem] print-hide">
    <!-- This div is to create space at the bottom for the fixed print button -->
  </div>

  <div class="print-hide">
    <Footer />
  </div>

  <style>
    @media print {
      .btn,
      .print-hide {
        display: none !important;
      }

      .cv-container {
        width: 100%;
        margin: 0;
        padding: 0;
        border: none;
        box-shadow: none;
      }

      .cv-body {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
      }
    }
  </style>
</Layout>
